<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="2"
	    android:orientation="horizontal" >
    
	    <ImageButton
	        android:id="@+id/btnAbMensualesTarifasAgregar"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:contentDescription="Agregar"
	        android:onClick="startAbMensualesTarifasAgregarActivity"
	        android:scaleType="center"
	        android:src="@drawable/img_agregar" />
	
	    <ImageButton
	        android:id="@+id/btnAbMensualesTarifasEliminar"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:contentDescription="Eliminar"
	        android:onClick="startAbMensualesTarifasEliminarActivity"
	        android:scaleType="center"
	        android:src="@drawable/img_eliminar" />
	    
	    <ImageButton
	        android:id="@+id/btnAbMensualesTarifasModificar"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:contentDescription="Modificar"
	        android:onClick="startAbMensualesTarifasModificarActivity"
	        android:scaleType="center"
	        android:src="@drawable/img_modificar" />

	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="2"
	    android:orientation="horizontal" >
	    
		<ImageButton
		    android:id="@+id/btnAbMensualesTarifasListar"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:contentDescription="Listar"
		    android:onClick="startAbMensualesTarifasListarActivity"
		    android:scaleType="center"
		    android:src="@drawable/img_listar" />
    
    </LinearLayout>
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="horizontal" >
	    
		<ImageButton
		    android:id="@+id/btnAtras"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:contentDescription="AtrÃ¡s"
		    android:onClick="btnBack_OnClick"
		    android:src="@drawable/img_anterior" >

		</ImageButton>
</LinearLayout>
	
</LinearLayout>