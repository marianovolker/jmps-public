<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jmps.android.pos.AbMensualesTarifasAgregarActivity$PlaceholderFragment" >

    <TextView
            android:id="@+id/txtAbMensualesTarifasAgregarInfoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Nombre"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtAbMensualesTarifasAgregarNombre"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAbMensualesTarifasAgregarInfoNombre" />

        <TextView
            android:id="@+id/txtAbMensualesTarifasAgregarInfoDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAbMensualesTarifasAgregarNombre"
            android:text="@string/descripcion"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtAbMensualesTarifasAgregarDescripcion"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAbMensualesTarifasAgregarInfoDescripcion" />

        <TextView
            android:id="@+id/txtAbMensualesTarifasAgregarInfoExcepcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAbMensualesTarifasAgregarDescripcion"
            android:text="Excepción"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtAbMensualesTarifasAgregarExcepcion"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAbMensualesTarifasAgregarInfoExcepcion" />

        <TextView
            android:id="@+id/txtAbMensualesTarifasAgregarInfoPeriodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAbMensualesTarifasAgregarExcepcion"
            android:text="Período"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtAbMensualesTarifasAgregarPeriodo"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAbMensualesTarifasAgregarInfoPeriodo" />

        <TextView
            android:id="@+id/txtAbMensualesTarifasAgregarInfoCosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAbMensualesTarifasAgregarPeriodo"
            android:text="@string/precio"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtAbMensualesTarifasAgregarCosto"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAbMensualesTarifasAgregarInfoCosto"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnAbMensualesTarifasAgregarCancelar"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtAbMensualesTarifasAgregarCosto"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/btnAbMensualesTarifasAgregarAceptar"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:layout_below="@id/txtAbMensualesTarifasAgregarCosto"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="30dp"
            android:text="@android:string/ok" />
 
</RelativeLayout>