<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnAbDiariosIngreso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_ingreso"
            android:onClick="startAbDiariosIngresoActivity"
            android:src="@drawable/img_agregar" />

        <ImageButton
            android:id="@+id/btnAbDiariosEgreso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_egreso"
            android:onClick="startAbDiariosEgresoActivity"
            android:scaleType="center"
            android:src="@drawable/img_eliminar" />

        <ImageButton
            android:id="@+id/btnAbDiariosEgresoQr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_egreso_qr"
            android:onClick="startAbDiariosEgresoQrActivity"
            android:scaleType="center"
            android:src="@drawable/img_qrcode" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnAbDiariosTarifas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_tarifas"
            android:onClick="startAbDiariosTarifasActivity"
            android:scaleType="center"
            android:src="@drawable/img_tarifas" />

        <ImageButton
            android:id="@+id/btnAbDiariosCategorias"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_categorias"
            android:onClick="startAbDiariosCategoriasActivity"
            android:scaleType="center"
            android:src="@drawable/img_pendientes_pago" />

        <ImageButton
            android:id="@+id/btnAbDiariosPlaya"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_playa"
            android:onClick="startAbDiariosPlayaActivity"
            android:scaleType="center"
            android:src="@drawable/img_playa" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:orientation="horizontal" >
        
		<View 
		    android:layout_height="match_parent"
        	android:layout_width="wrap_content"
        	android:layout_weight="1" />        

        <ImageButton
            android:id="@+id/btnAbDiariosBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center"
            android:contentDescription="@string/back"
            android:onClick="btnBack_OnClick"
            android:src="@drawable/ic_action_back" >
        </ImageButton>
        
		<View 
		    android:layout_height="match_parent"
        	android:layout_width="wrap_content"
        	android:layout_weight="1" />        
        
    </LinearLayout>

</LinearLayout>