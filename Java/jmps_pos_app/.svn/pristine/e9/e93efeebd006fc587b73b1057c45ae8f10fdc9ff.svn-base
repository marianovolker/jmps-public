<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jmps.android.pos.AbDiariosCategoriasAltaActivity$PlaceholderFragment" >

        <EditText
            android:id="@+id/txtAbDiariosCategoriasAltaNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:hint="@string/nombre"
            android:inputType="textCapWords" />

        <Button
            android:id="@+id/btnAbDiariosCategoriasAltaGuardar"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtAbDiariosCategoriasAltaNombre"
            android:layout_marginTop="30dp"
            android:text="@string/save" />

        <Button
            android:id="@+id/btnAbDiariosCategoriasAltaCancelar"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnAbDiariosCategoriasAltaGuardar"
            android:layout_alignBottom="@+id/btnAbDiariosCategoriasAltaGuardar"
            android:layout_toLeftOf="@+id/btnAbDiariosCategoriasAltaGuardar"
            android:text="@android:string/cancel" />

</RelativeLayout>