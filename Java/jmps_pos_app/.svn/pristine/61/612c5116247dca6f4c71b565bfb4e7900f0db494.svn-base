<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnAbDiariosTarifasAgregar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_tarifas_agregar"
            android:onClick="startAbDiariosTarifasAgregarActivity"
            android:scaleType="center"
            android:src="@drawable/img_agregar" />

        <ImageButton
            android:id="@+id/btnAbDiariosTarifasEliminar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_tarifas_eliminar"
            android:onClick="startAbDiariosTarifasEliminarActivity"
            android:scaleType="center"
            android:src="@drawable/img_eliminar" />

        <ImageButton
            android:id="@+id/btnAbDiariosTarifasModificar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_tarifas_modificar"
            android:onClick="startAbDiariosTarifasModificarActivity"
            android:scaleType="center"
            android:src="@drawable/img_modificar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnAbDiariosTarifasListar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios_tarifas_listar"
            android:onClick="startAbDiariosTarifasListarActivity"
            android:scaleType="center"
            android:src="@drawable/img_listar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnAbDiariosTarifasAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/back"
            android:onClick="btnBack_OnClick"
            android:src="@drawable/img_anterior" >
        </ImageButton>
    </LinearLayout>

</LinearLayout>