<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnJMPSMainAbMensuales"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_mensuales"
            android:onClick="startAbMensualesActivity"
            android:scaleType="center"
            android:src="@drawable/img_abonados_mensuales" />

        <ImageButton
            android:id="@+id/btnJMPSMainAbDiarios"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_ab_diarios"
            android:onClick="startAbDiariosActivity"
            android:scaleType="center"
            android:src="@drawable/img_abonados_diarios" />

        <ImageButton
            android:id="@+id/btnJMPSMainCaja"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_caja"
            android:scaleType="center"
            android:src="@drawable/img_caja" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnJMPSMainEstadisticas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_estadisticas"
            android:scaleType="center"
            android:src="@drawable/img_estadisticas" />

        <ImageButton
            android:id="@+id/btnJMPSMainSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/title_activity_settings"
            android:onClick="startSettingsActivity"
            android:scaleType="center"
            android:src="@drawable/img_settings" />

        <ImageButton
            android:id="@+id/btnJMPSMainExit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/exit"
            android:onClick="endApp"
            android:scaleType="center"
            android:src="@drawable/img_salir" />
    </LinearLayout>

</LinearLayout>