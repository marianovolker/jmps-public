<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnAbMensualesAlta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:contentDescription="@string/add"
            android:onClick="startAbMensualesAltaActivity"
            android:src="@drawable/refresh" />

        <ImageButton
            android:id="@+id/btnAbMensualesAltaEliminar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"          
            android:contentDescription="Eliminar"
            android:onClick="startAbMensualesEliminarActivity"
            android:src="@drawable/refresh" />

        <ImageButton
            android:id="@+id/btnAbMensualesModificar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:contentDescription="Modificar"
            android:onClick="startAbMensualesModificarActivity"
            android:src="@drawable/refresh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnAbMensualesPagos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:contentDescription="Pagos"
            android:onClick="startAbMensualesPagosActivity"
            android:src="@drawable/ingresar_un_pago" />

        <ImageButton
            android:id="@+id/btnAbMensualesPendientes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:contentDescription="Pagos pendientes"
            android:onClick="startAbMensualesPendientesActivity"
            android:src="@drawable/tarifas" />

        <ImageButton
            android:id="@+id/btnAbMensualesTarifas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:contentDescription="Tarifas"
            android:onClick="startAbMensualesTarifasActivity"
            android:src="@drawable/refresh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

		<View
        	android:layout_width="wrap_content" 
		    android:layout_height="match_parent"
        	android:layout_weight="1"/>
		        
        <ImageButton
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:contentDescription="@string/back"
            android:onClick="btnBack_OnClick"
            android:src="@drawable/ic_action_back" >
        </ImageButton>
        
		<View 
        	android:layout_width="wrap_content"
		    android:layout_height="match_parent"
        	android:layout_weight="1"/>
		        
    </LinearLayout>

</LinearLayout>